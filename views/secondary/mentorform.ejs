    });

    async function filterMentors(filterCriteria) {
      const mentorList = [];
      const usersRef = database.ref('users');
      const snapshot = await usersRef.once('value');
      const userData = snapshot.val();

      for (const userId in userData) {
        const user = userData[userId];
        if (user.youAre === 'mentor' && user.class === filterCriteria.className) {
          mentorList.push({
            userId: userId,
            name: user.name
          });
        }
      }
      return mentorList;
    }

    async function sendd(user) {
      const filterCriteria = {
        role: 'mentor',
        className: "secondary"
      };

      const mentorData = await filterMentors(filterCriteria);
      assignMentor(mentorData);
    }

    function assignMentor(mentorData) {
      if (mentorData.length === 0) {
        alert("mentors currently not available for your criteria.");
        return;
      }

      const randomIndex = Math.floor(Math.random() * mentorData.length);
      const assignedMentor = mentorData[randomIndex];

      const user = auth.currentUser;
      if (user) {
        const userId = user.uid;
        const userRef = database.ref('users/' + userId);
        userRef.update({
          mentor: assignedMentor.userId
        })
          .then(() => {
            alert("Submission successful");
            window.location.href="dashboard";
          })
          .catch((error) => {
            console.error("Error updating mentor assignment:", error);
          });
      } else {
        console.log("no auth user found");
