<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/punc.css">
</head>
<style>
    .note {
        margin-top: 100px;
        margin-left: 40%;
        position: relative;
    }

    .heading{
        margin-left: 470px;
        font-size: 60px;
        font-weight: 20px;
        margin-top:30px;
    }

    .output{
        margin-left: 200px;
        margin-top: 70px;
        position: relative;
    }
    body{
        font-family: sans-serif;
    }
</style>

<body style="margin-right: 25%; background-image: url(/images/text.jpeg);">
    <p class="heading">TEXT EDITOR</p>
   
    <div style="display: flex; justify-content: space-evenly; align-items: center;">

        
        <div class="note">
            <textarea  name="" id="lol" cols="45" rows="10" placeholder="Enter your text here......"></textarea>
            <input type="submit" onclick="call()">
        </div>
        
        <div class="output">
            <textarea name="" id="lol2" cols="45" rows="10" style="margin-right: 30%;" placeholder="Your output is seen here....."></textarea>
        </div>
    </div>
    <script>
        async function call() {
            let text = document.getElementById('lol').value;
            console.log(text)

            const res = await fetch("http://localhost:3001/aigen", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ text }),
            })

            const data = await res.json()
            setdataa(data)
        }

        function setdataa(data) {
            let elme = document.getElementById("lol2")
            elme.value = data[0].generated_text
        }

    </script>

</body>

</html>