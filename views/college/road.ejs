<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/road.css">
</head>
<style>
    .note {
        margin-top: 100px;
        margin-left: 40%;
    }

    .title{
        font-size: 50px;
        font-family: sans-serif;
        margin-top: 30px;
        margin-left: 410px;
    }

    .sub{
        margin-right: 100px;
    }
</style>

<body style="background-image: url(/images/road.jpg); background-size: cover;">
    <p class="title"> GENERATE ROADMAP</p>
    <div class="form pb-3">
        <input type="text" id ="prompt" placeholder="RoadMap for.....">
        <button type="submit" onclick="call()" class="sub">Submit</button>
    </div>
    <br>
    <textarea style="display: flex; justify-content: center; align-items: center; margin-right: 150px;" id="lol" cols="130" rows="40" class="input"></textarea>

    <div style="display: flex; justify-content: center; align-items: center; margin: 30px;">
       
    </div>

    
    <script>
        async function call() {
            let road = document.getElementById('prompt').value;
            console.log(road)

            const res = await fetch("http://localhost:3001/roadmap", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ road }),
            })

            const data = await res.json()
            setdataa(data)
        }

        function setdataa(data) {
            let elme = document.getElementById("lol")
            console.log(data)
            elme.value = data.output
        }

    </script>

</body>

</html>